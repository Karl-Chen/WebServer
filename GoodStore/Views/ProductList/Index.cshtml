@model IEnumerable<GoodStore.Models.Product>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="row">
    @foreach (var it in Model)
    {
        <div class="col-xl-3 col-md-6 card">
            <img src="~/ProductPhotos/@(it.Picture)" width="100%" class="img-thumbnail" />
            <h3>@it.ProductName</h3>
            <h4 class="text-end text-danger fw-bold">@Html.DisplayFor(modelItem => it.Price)</h4>

            <div class="card-footer">
                <div class="d-grid gap-2">
                    <button class="btn btn-success"><i class="bi bi-cart" style="font-size: 2rem;"></i> 加入購物車 </button>
                </div>
            </div>
        </div>
    }
</div>

@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Picture)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cate.CateID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProductID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ProductID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ProductID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
