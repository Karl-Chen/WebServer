@model IEnumerable<CodeFirstModelExam.Models.Rebook>
@{
    Layout = null;
}

@if(Model.Count() > 0)
{
    <h5 class="text-center">回覆內容</h5>
        <div class="border border-1 rounded p-4 bg-light">
        @foreach (var item in Model)
        {
            <p>@Html.Raw(@item.Description.Replace("\r\n","<br>"))</p>
            <p class="text-end">@Html.DisplayFor(modelItem => @item.Author)  於 @Html.DisplayFor(modelItem => item.TimeStmp) 回覆</p>
            <hr/>
        }
    </div>
}