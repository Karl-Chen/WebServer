@model IEnumerable<MyModel_CodeFirst.Models.Book>

@{
    Layout = null;
}

@foreach (var item in Model) {
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h3>@item.Title</h3>
            </div>
            <div class="card-body" style="height:300px;overflow:auto">
                <p>@Html.Raw( item.Description.Replace("\r\n", "<br>"))</p>
            </div>
            <div class="card-footer">
                <p class="text-end">@item.Author | @Html.DisplayFor(modelItem =>item.TimeStmp)</p>
            </div>
        </div>
    </div>
}

<div class="col-12">
    <a asp-action="Index" asp-controller="PostBooks" >看更多留言...</a>
</div>