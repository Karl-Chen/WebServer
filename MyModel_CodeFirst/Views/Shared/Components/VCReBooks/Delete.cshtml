@model IEnumerable<MyModel_CodeFirst.Models.Rebook>

@{
    Layout = null;
}

@* //2.3.9 依喜好編輯Default View排版方式 *@
@if (Model.Count() > 0) { 
    <div class="p-4">
    @foreach (var item in Model) {
            <p class="text-truncate" style="max-width:800px">@item.Description</p>
                                                                                                            //4.4.5 將VCRebooks/Delete View的刪除按鈕改寫成表單傳送
            <p class="text-end">@Html.DisplayFor(modelItem => @item.Author) | @Html.DisplayFor(modelItem => item.TimeStmp) | <button class="btn btn-outline-danger btn-sm" onclick="delReBook('@item.ReBookID', '@item.BookID')">刪除</button> </p>
        <hr/>
        }
    </div>
}